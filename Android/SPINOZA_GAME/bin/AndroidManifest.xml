<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.swdm.spinoza_game"
    android:versionCode="4"
    android:versionName="2.1" >
	
     <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/appletree"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.swdm.spinoza_game.AppleTreeGame"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Splash"
            android:theme="@android:style/Theme.NoTitleBar"  />
        <activity
            android:name=".TutorialActivity"
            android:label="TutorialActivity" />
        <activity
            android:name=".AppleTreeRanking"
            android:label="AppleTreeRanking"
            />
        <activity
            android:name=".UpdateRanking"
            android:label="UpdateRanking"
            />
        <activity 
            android:name=".RankActivity"
            android:label="MainActivity"></activity>
    </application>

</manifest>